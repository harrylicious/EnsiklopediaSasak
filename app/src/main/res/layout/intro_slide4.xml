<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1"
    tools:context=".IntroAppActivity">

    <ImageView
        android:id="@+id/img4"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/rate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/slide_title4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="TERIMA KASIH"
        android:textColor="@color/primary_dark"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@id/img4"
        android:layout_marginTop="2dp"
        />

    <TextView
        android:id="@+id/slide_desc4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:text="Sudah membantu kami juga dalam mengembangkan budaya dengan"
        android:textColor="@color/primary"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_below="@id/slide_title4"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        />

    <TextView
        android:id="@+id/txt_dengan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menginstall"
        android:textStyle="italic"
        android:textColor="@color/primary_dark"
        android:textSize="25sp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:layout_below="@id/slide_desc4"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_tittle"
        android:layout_below="@id/txt_dengan"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        />


    <TextView
        android:id="@+id/txt_baper1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Ensiklopedia Sasak"
        android:textStyle="italic"
        android:textColor="#FFF"
        android:textSize="28sp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:layout_below="@id/txt_dengan"
        android:layout_marginTop="10dp"
        />




</RelativeLayout>
